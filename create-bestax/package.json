{
  "name": "create-bestax",
  "version": "1.2.0",
  "description": "Create a new bestax-bulma project",
  "type": "module",
  "bin": {
    "create-bestax": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --watch",
    "test:coverage": "NODE_OPTIONS=\"--experimental-vm-modules\" jest --coverage",
    "test:e2e": "playwright test --config=e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=e2e/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config=e2e/playwright.config.ts --headed",
    "test:e2e:update": "playwright test --config=e2e/playwright.config.ts --update-snapshots",
    "test:e2e:report": "playwright show-report e2e/playwright-report",
    "lint": "eslint src e2e/tests e2e/utils --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "clean": "rimraf dist",
    "release": "npx semantic-release"
  },
  "keywords": [
    "bestax",
    "bulma",
    "react",
    "create",
    "cli",
    "scaffold"
  ],
  "author": "Alex Smith",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allxsmith/bestax.git",
    "directory": "create-bestax"
  },
  "homepage": "https://bestax.io",
  "bugs": {
    "url": "https://github.com/allxsmith/bestax/issues"
  },
  "dependencies": {
    "@allxsmith/bestax-bulma": "^2.1.3",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "@types/prompts": "^2.4.9",
    "@types/wait-on": "^5.3.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
