{
  "name": "@allxsmith/bestax-bulma",
  "version": "2.6.1",
  "description": "A fully-typed React component library for the Bulma CSS framework. Build modern UIs quickly with reusable, accessible, and customizable Bulma-based React components.",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c --watch",
    "watch": "rollup -c --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "bundle:stats": "rollup -c --configPlugin visualizer",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "clean": "rimraf dist",
    "storybook": "storybook dev -p 6006",
    "start": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "release": "npx semantic-release"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.0.3",
    "@mdi/font": "^7.4.47",
    "@rollup/plugin-commonjs": "^28.0.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.0",
    "@storybook/addon-docs": "^9.1.12",
    "@storybook/addon-onboarding": "^9.1.12",
    "@storybook/react-vite": "^9.1.12",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.13",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-react-hooks": "^1.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.1.12",
    "ionicons": "^4.6.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "material-icons": "^1.13.14",
    "material-symbols": "^0.34.1",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.24.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "storybook": "^9.1.12",
    "ts-jest": "^29.2.5",
    "tslib": "^2.8.0",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@mdi/font": "^7.4.47",
    "bulma": "^1.0.4",
    "ionicons": "^4.6.3",
    "material-icons": "^1.13.10",
    "material-symbols": "^0.34.1",
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0",
    "react-dom": "^16.8.0 || ^17.0.0 || ^18.0.0 || ^19.0.0"
  },
  "keywords": [
    "react",
    "bulma",
    "typescript",
    "components"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/allxsmith"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/*"
      ]
    }
  },
  "author": "Alex Smith",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/allxsmith/bestax.git",
    "directory": "bulma-ui"
  },
  "homepage": "https://bestax.io",
  "bugs": {
    "url": "https://github.com/allxsmith/bestax/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "overrides": {
    "storybook": "$storybook"
  }
}
