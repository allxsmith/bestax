{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "module": "ESNext",
    "target": "ES2019",
    "jsx": "react-jsx",
    "noEmit": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/**/__tests__/**/*",
    "src/**/*.test.tsx",
    "**/*.stories.tsx",
    "**/*.stories.ts"
  ]
}
